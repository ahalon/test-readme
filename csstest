body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    padding: 20px;
    color: #333;
}

h1 {
    text-align: center; /* Wyrównanie głównego nagłówka */
    color: #006400; /* Ciemnozielony kolor */
}

section {
    max-width: 800px;
    margin: 30px auto; /* Dodanie odstępu między sekcjami */
    padding: 20px;
    background-color: white;
    border: 1px solid #ccc; /* Prosta ramka dla sekcji */
}

/* 2. Kolory tła dla tytułów sekcji */
h2 {
    background-color: #e0f7fa; /* Jasnoniebieskie tło */
    padding: 10px;
    border-radius: 5px;
    color: #00796b;
}

/* 10. Zmiana koloru tekstu dla różnych sekcji */
#grand-canyon p {
    color: #006400; /* Ciemnozielony */
}
#great-barrier-reef p {
    color: #1565c0; /* Ciemnoniebieski */
}
#mount-everest p {
    color: #616161; /* Szary */
}

/* 7. Stylizacja linków */
.links a {
    color: #e65100; /* Pomarańczowy kolor linku */
    text-decoration: none; /* Usunięcie podkreślenia */
    margin: 0 10px;
}

.links a:hover {
    text-decoration: underline;
}

/* 3. Stylizacja tabel */
table {
    width: 100%;
    border-collapse: collapse;
    margin: 20px 0;
}

th, td {
    padding: 8px; /* Dodanie paddingu */
    border: 1px solid #ddd; /* Dodanie ramki do komórek */
    text-align: left;
}

th {
    background-color: #f2f2f2;
}

/* 4 & 5. Szerokość i odstępy dla pól formularza */
input[type="text"],
select,
textarea {
    width: 100%; /* Zwiększenie szerokości */
    padding: 10px; /* Padding dla pól */
    margin-bottom: 15px; /* Odstęp między sekcjami formularza */
    border: 1px solid #ccc;
    box-sizing: border-box; /* Ważne, aby padding nie zwiększał szerokości ponad 100% */
}

label {
    display: block; /* Upewnienie się, że etykiety zajmują całą linię */
    margin-top: 10px;
}

/* 6. Stylizacja przycisku "Submit" */
button[type="submit"] {
    background-color: #4CAF50; /* Zielone tło */
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 4px; /* Zaokrąglenie narożników */
    cursor: pointer;
    font-size: 1em;
    transition: background-color 0.3s;
}

/* 6. Efekt :hover */
button[type="submit"]:hover {
    background-color: #45a049;
}

